#pragma once

#include "Enemy.hpp"
#include <array>
#include <raylib.h>

class Goldsip : public Enemy {
public:
  Goldsip(Vector2 pos, std::array<Texture2D *, 3> textures)
      : Enemy(EnemyType::GOLDSIP, pos, Random::rangeFloat(50, 51),
              Random::rangeInt(50, 70), 70, textures) {}

  void update(float delta, Vector2 playerPos) override {
    Vector2 dir = {playerPos.x - position.x, playerPos.y - position.y};
  };
};
